{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            {{ if .CustomLabels }}
            {{ .CustomLabels }}
            {{ end }}
            "vendor": "RadonDB",
            "pg-cluster": "{{.ClusterName}}"
        }
    },
    "spec": {
        "accessModes": [
            "{{.AccessMode}}"
        ],
        {{ if .StorageClass }}"storageClassName": "{{.StorageClass}}",{{ end }}
        "resources": {
            "requests": {
                "storage": "{{.Size}}"
            }
        }
    }
}
